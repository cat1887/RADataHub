{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/Chart%20Packs/levelling-up/LADs_2023.geojson",
    "format": {"property": "features"}
  },
  "projection": {"type": "identity", "reflectY": true},
  "config": {
    "font": "Circular Std",
    "text": {
      "color": "#676A86",
      "align": "left",
      "baseline": "middle",
      "dx": 7,
      "dy": 0,
      "fontSize": 11
    },
    "view": {
      "stroke": null,
      "continuousWidth": 400,
      "continuousHeight": 300,
      "discreteWidth": 400,
      "discreteHeight": 300
    },
    "bar": {"color": "#179fdb"},
    "line": {"color": "#e6224b"},
    "rule": {"color": "#676A86"},
    "area": {"opacity": 0.3},
    "point": {"filled": true, "size": 80, "color": "#e6224b", "opacity": 0.95},
    "geoshape": {"stroke": "white", "strokeWidth": 0.3},
    "rect": {"fill": "#d6d4d4", "opacity": 0.3},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Circular Std",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "title": null,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisXDiscrete": {
      "grid": false,
      "labelAngle": 0,
      "tickCount": 10,
      "tickOpacity": 0.5,
      "title": null
    },
    "axisYDiscrete": {"ticks": false, "labelPadding": 5},
    "axisXTemporal": {"grid": false, "ticks": true},
    "axisXQuantitative": {"grid": true},
    "axisYQuantitative": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false,
      "labelPadding": 5,
      "tickCount": 8,
      "titleAngle": 0,
      "titleAlign": "left",
      "titleBaseline": "bottom",
      "titleX": 0,
      "titleY": -5
    },
    "title": {
      "color": "#122b39E6",
      "subtitleColor": "#676A86",
      "font": "Circular Std",
      "subtitleFont": "Circular Std",
      "anchor": "start",
      "fontSize": 14,
      "subtitleFontSize": 12,
      "subtitlePadding": 4,
      "offset": 0,
      "frame": "group"
    },
    "legend": {
      "titleColor": "#122b39",
      "title": null,
      "labelColor": "#122b39",
      "labelFontSize": 11
    }
  },
  "transform": [
    {"filter": "datum.properties.FID != 322"},
    {
      "lookup": "properties.LAD23CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/Chart%20Packs/levelling-up/weekly_pay_LAD.csv"
        },
        "key": "id",
        "fields": ["name", "value"]
      }
    }
  ],
  "width": 300,
  "height": 500,
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "rgba(0,0,0,0.1)", "color": "red"},
      "encoding": {"tooltip": [{"field": "properties"}]}
    },
    {
      "mark": {"type": "geoshape", "stroke": "rgba(0,0,0,0.1)"},
      "encoding": {
        "color": {
          "field": "value",
          "legend": {
            "orient": "none",
            "labelExpr": "'Â£'+format(datum.value, ',.0f')+(datum.value == 800 ? ' a week' : '')",
            "legendX": -75,
            "legendY": 50
          },
          "scale": {"scheme": "viridis", "type": "log"},
          "type": "quantitative"
        },
        "tooltip": [{"field": "properties"}]
      }
    }
  ]
}