{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "US Output per worker",
    "subtitle": [
      "GDP (constant 2015 $), source: World Bank",
      "Persons employed, source: OECD",
      ""
    ],
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/jhellingsdata.github.io/main/Data/growth-F3_US_gdp_perWorker.csv"
  },
  "width": 500,
  "height": 300,
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false, "ticks": false}
    }
  },
  "layer": [
    {
      "encoding": {
        "color": {"value": "rgb(128,0,0)"},
        "y": {
          "field": "Output per worker ($)",
          "type": "quantitative",
          "title": null,
          "scale": {"type": "linear", "domain": [40000, 140000]},
          "axis": {
            "values": [
              40000,
              50000,
              60000,
              70000,
              80000,
              90000,
              100000,
              110000,
              120000,
              130000,
              140000
            ],
            "gridOpacity": 0.6,
            "ticks": false,
            "labelPadding": 5,
            "labelFontSize": 11
          }
        }
      },
      "layer": [
        {"mark": "line"},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": "point"
        }
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {
            "field": "Output per worker ($)",
            "type": "quantitative",
            "format": "$,.0f",
            "title": "Output per worker (USD)"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
  ]
}