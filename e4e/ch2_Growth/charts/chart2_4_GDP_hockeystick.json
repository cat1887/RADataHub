{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch2_Growth/data/chart2_4_GDP_hockeystick.csv"
  },
  "config": {
    "style": {"cell": {"stroke": "transparent"}},
    "locale": {
      "number": {
        "decimal": ".",
        "thousands": ",",
        "grouping": [3],
        "currency": ["$", " trillion"]
      }
    }
  },
  "title": {
    "text": "World GDP - The Hockeystick",
    "subtitle": ["US Dollars (Trillions)", "Data: OWID", ""],
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black"
  },
  "width": 500,
  "height": 300,

  "layer": [{
    "mark": {
      "type": "line",
      "point": {
        "color": "rgb(128,0,0)",
        "size": 20,
        "fillOpacity": 0.5
      },
      "interpolate": "linear",
      "color": "rgb(128,0,0)"
    },
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "title": null,
        "axis": {
          "labelAngle": 0,
          "grid": false,
          "ticks": false,
          "labelPadding": 5,
          "labelFontSize": 11
        }
      },
      "y": {
        "field": "GDP",
        "type": "quantitative",
        "title": null,
        "axis": {
          "grid": true,
          "gridOpacity": 0.6,
          "format": "$2f",
          "ticks": false,
          "labelPadding": 5,
          "labelFontSize": 11,
          "tickCount": 7
        }
      }
    }
  }, 
  {
    "mark": "rule",
    "encoding": {
      "x": {"field": "Year", "type": "temporal"},
      "opacity": {
        "condition": {"value": 0.3, "param": "hover", "empty": false},
        "value": 0
      },
      "tooltip": [
        {"field": "Year", "formatType": "time", "format": "%Y"},
        {"field": "GDP", "title": "World GDP", "format": "$.5"}
      ]
    },
    "params": [
      {
        "name": "hover",
        "select": {
          "type": "point",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "clear": "mouseout"
        }
      }
    ]

  },
  {
    "mark": {"type": "point", "filled": false, "color": "rgb(128,0,0)"},
    "encoding": {
      "x": {"field": "Year", "type": "temporal"},
      "y": {"field": "GDP", "type": "quantitative"},
      "opacity": {
        "condition": {"value": 0.7, "param": "hover", "empty": false},
        "value": 0
      }
    }
  }]
}
