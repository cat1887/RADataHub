{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "config": {"view": {"stroke": null}, "padding": 5},
  "width": 600,
  "height": 330,

  "title": {
    "text": "GDP Growth in the United States",
    "anchor": "start",
    "subtitle": ["Real GDP: Percent change at annual rate, Q2-Q3 2022", "Source: BEA", ""],
    "subtitleFontSize": 12,
    "fontSize": 16,
    "subtitleFontStyle": "italic"
  },

  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch1_GDP/data/chart1_5_us_map_gdp_US_States_5m.json",
    "format": {"property": "features"}
  },

  "params": [
    {
      "name": "hover",
      "select": {
        "type": "point",
        "fields": ["properties.NAME"],
        "toggle": true,
        "on": "mouseover"
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch2_Growth/data/chart2_3_map_GDP_growth_US.csv"
        },
        "key": "State",
        "fields": ["2022:Q3-:Q4"]
      },
      "default": "-0.00"
    }
  ],
  "projection": {"type": "albersUsa", "translate": [270, 160], "scale": 700},
  "mark": {
    "type": "geoshape", "stroke": "white", "strokeOpacity": 0.6
  },
  "encoding": {
    "color": {
      "field": "2022:Q3-:Q4",
      "type": "quantitative",
      "scale": {
        "scheme": "blueOrange",
        "reverse": true,
        "domainMid": 0
      },
      "legend": {
        "title": null,
        "format": "%",
        "labelFontSize": 11,
        "orient": "bottom-right",
        "direction": "vertical",
        "labelOffset": 3
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "title": "State"},
      {
        "field": "2022:Q3-:Q4",
        "title": "Real GDP: Annual Percentage Change Q2-Q3 2022",
        "format": ".1%"
      }
    ]
  }
}