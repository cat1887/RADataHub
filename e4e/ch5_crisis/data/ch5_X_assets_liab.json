{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "hconcat":[{
    "data": {
      "url": "https://raw.githubusercontent.com/JamesFKean/RA_Summer/main/data/ch5_x_assets_liabilitiesv4.csv"
    },
    "height": 300,
    "width": 500,
    "title": {
      "text": "US Household Balance Sheet",
      "anchor": "start",
      "subtitle": "(In Trillions) Source: Federal Reserve",
      "subtitleFontSize": 11,
      "fontSize": 16,
      "subtitleFontStyle": "italic"
    },
    "transform": [{"calculate": "datum.value/1000000", "as": "values"}],
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "grid": false,
          "ticks": false,
          "title": null,
          "labelPadding": 5,
          "labelFontSize": 11
        }
      }
    },
    "layer": [
      {
        "encoding": {
          "color": {
            "field": "variable",
            "type": "nominal",
            "legend": {"orient": "top-left", "title": null},
            "scale": {
              "domain": [
                "Household Net Worth",
                "Household Assets",
                "Household Liabilities"
              ],
              "range": ["rgb(128,0,0)", "grey", "orange"]
            }
          },
          "y": {
            "field": "values",
            "type": "quantitative",
            "axis": {
              "gridOpacity": 0.6,
              "title": null,
              "format": "$.0f",
              "ticks": false,
              "titlePadding": 5,
              "labelPadding": 5,
              "labelFontSize": 11
            }
          }
        },
        "layer": [
          {"mark": "line"},
          {
            "transform": [{"filter": {"param": "hover", "empty": false}}],
            "mark": "point"
          }
        ]
      },
      {
        "transform": [
          {"pivot": "variable", "value": "values", "groupby": ["date"]}
        ],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {
              "field": "Household Assets",
              "type": "quantitative",
              "format": "$.02f"
            },
            {
              "field": "Household Liabilities",
              "type": "quantitative",
              "format": "$.02f"
            },
            {
              "field": "Household Net Worth",
              "type": "quantitative",
              "format": "$.02f",
              "title": "Net Worth = Assets-Liabilities"
            }
          ]
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["date"],
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ]
      },
      {
        "mark": "rect",
        "data": {
          "values": [
            {"start": "2007 Oct", "end": "2009 Jan", "event": "GFC"},
            {"start": "2001 Jan", "end": "2001 Oct", "name": "dotcom"},
            {"start": "2020 Apr", "end": "2020 Jul", "name": "dotcom"}
          ]
        },
        "encoding": {
          "x": {"field": "start"},
          "x2": {"field": "end"},
          "color": {"value": "red"},
          "opacity": {"value": 0.1}
        }
      }
    ]}]
  }