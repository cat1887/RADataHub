{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {
        "stroke": null
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch8_Trends/data/chart8_X_CO2_Emissions.csv"
    },
    "height": 260,
    "width": 340,
    "title": {
        "text": "CO2 Emissions",
        "anchor": "start",
        "color": "black",
        "subtitle": [
            "Tonnes per capita, from fossil fuels & industry",
            "Source: Global Carbon Project",
            ""
        ],
        "subtitleFontSize": 12,
        "subtitleFontStyle": "italic",
        "fontSize": 16
    },
    "transform": [
        {
            "filter": {
                "field": "Country",
                "oneOf": [
                    "Brazil",
                    "China",
                    "India",
                    "United States",
                    "United Kingdom"
                ]
            }
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "line",
                "point": "transparent"
            },
            "description": "Carbon per capita by country",
            "encoding": {
                "color": {
                    "type": "nominal",
                    "field": "Country",
                    "legend": null,
                    "scale": {
                        "scheme": "yellowgreenblue"
                    },
                    "sort": [],
                    "title": null
                },
                "tooltip": [
                    {
                        "type": "temporal",
                        "field": "Year",
                        "timeUnit": "year",
                        "title": "Year"
                    },
                    {
                        "type": "quantitative",
                        "field": "CO2 pc (production)",
                        "title": "CO2 per capita (t)",
                        "format": ".3f"
                    },
                    {
                        "type": "nominal",
                        "field": "Country"
                    }
                ],
                "x": {
                    "type": "temporal",
                    "axis": {
                        "grid": false,
                        "labelFontSize": 11,
                        "labelPadding": 5,
                        "ticks": false,
                        "tickCount": 6
                    },
                    "field": "Year",
                    "title": ""
                },
                "y": {
                    "type": "quantitative",
                    "axis": {
                        "grid": true,
                        "gridOpacity": 0.6,
                        "labelPadding": 5,
                        "tickCount": 7,
                        "ticks": false,
                        "title": ""
                    },
                    "field": "CO2 pc (production)",
                    "sort": [],
                    "title": ""
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": 2
            },
            "description": "Carbon per capita by country",
            "encoding": {
                "color": {
                    "type": "nominal",
                    "field": "Country",
                    "legend": null,
                    "scale": {
                        "scheme": "yellowgreenblue"
                    },
                    "sort": [],
                    "title": null
                },
                "text": {
                    "type": "nominal",
                    "field": "Country"
                },
                "tooltip": [
                    {
                        "type": "temporal",
                        "field": "Year",
                        "timeUnit": "year",
                        "title": "Year"
                    },
                    {
                        "type": "quantitative",
                        "field": "CO2 pc (production)",
                        "title": "CO2 per capita (t)",
                        "format": ".3f"
                    },
                    {
                        "type": "nominal",
                        "field": "Country"
                    }
                ],
                "x": {
                    "type": "temporal",
                    "field": "Year",
                    "title": ""
                },
                "y": {
                    "type": "quantitative",
                    "axis": {
                        "gridOpacity": 0.6,
                        "labelPadding": 5,
                        "tickCount": 7,
                        "ticks": false,
                        "title": ""
                    },
                    "field": "CO2 pc (production)",
                    "sort": [],
                    "title": ""
                }
            },
            "transform": [
                {
                    "filter": "year(datum.Year)==2021"
                },
                {
                    "filter": "datum.Country!='Brazil'"
                }
            ]
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": -7
            },
            "description": "Carbon per capita by country",
            "encoding": {
                "color": {
                    "type": "nominal",
                    "field": "Country",
                    "legend": null,
                    "scale": {
                        "scheme": "yellowgreenblue"
                    },
                    "sort": [],
                    "title": null
                },
                "text": {
                    "type": "nominal",
                    "field": "Country"
                },
                "tooltip": [
                    {
                        "type": "temporal",
                        "field": "Year",
                        "timeUnit": "year",
                        "title": "Year"
                    },
                    {
                        "type": "quantitative",
                        "field": "CO2 pc (production)",
                        "title": "CO2 per capita (t)",
                        "format": ".3f"
                    },
                    {
                        "type": "nominal",
                        "field": "Country"
                    }
                ],
                "x": {
                    "type": "temporal",
                    "field": "Year",
                    "title": ""
                },
                "y": {
                    "type": "quantitative",
                    "axis": {
                        "grid": true,
                        "gridOpacity": 0.6,
                        "labelPadding": 5,
                        "labelFontSize": 11,
                        "tickCount": 7,
                        "ticks": false,
                        "title": ""
                    },
                    "field": "CO2 pc (production)",
                    "sort": [],
                    "title": ""
                }
            },
            "transform": [
                {
                    "filter": "year(datum.Year)==2021"
                },
                {
                    "filter": "datum.Country=='Brazil'"
                }
            ]
        }
    ]
}