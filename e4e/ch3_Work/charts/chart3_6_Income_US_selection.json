{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch3_Work/data/chart3_6_Income_US_selection.csv"
  },
    "config": {
    "style": {"cell": {"stroke": "transparent"}},
    "locale": {
      "number": {
        "decimal": ".",
        "thousands": ",",
        "grouping": [3],
        "currency": ["$", "K"]
      }
    }
  },
  "transform": [
    {
      "calculate": "datum.Income/1000",
      "as": "Income"
    }
  ],
  "title": {
    "text": "US Incomes Over Time",
    "subtitle": [
      "Real Household Incomes by Percentile, Race, and Region, over time (2021 USD)",
      "Data: US Census Bureau",
      ""
    ],
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black"
  },
  "height": 300,
  "width": 500,
  "params": [
    {
      "name": "viewToggle",
      "bind": {
        "input": "checkbox",
        "name": "Toggle Indexing"
      },
      "value": false
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "filter": {
            "param": "selected_view"
          }
        },
        {
          "window": [
            {
              "op": "last_value",
              "field": "Income",
              "as": "startIncome"
            }
          ],
          "frame": [
            null,
            null
          ],
          "groupby": [
            "Series"
          ]
        },
        {
          "calculate": "if(viewToggle, (datum.Income - datum.startIncome) / datum.startIncome, datum.Income)",
          "as": "conditionalIncome"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "rule",
            "tooltip": {
              "expr": "   merge(datum.datum, {'Year': year(toNumber(hover.Year))} )  "
            }
          },
          "transform": [
            {
              "calculate": "datum.Income",
              "as": "Income"
            },
                          {
                "pivot": "Series",
                "groupby": ["Year"],
                "value": "Income"
              }
          ],
          "encoding": {
            "y": null,
            "color": {
              "value": "rgb(204,204,204)"
            },
            "opacity": {
              "condition": {
                "value": 1,
                "param": "hover",
                "empty": false
              },
              "value": 0
            }
          },
          "params": [
            {
              "name": "hover",
              "select": {
                "type": "point",
                "fields": ["Year"],
                "nearest": true,
                "on": "mouseover",
                "clear": "mouseout"
              }
            }
          ]
        },
        {
          "mark": {
            "type": "line",
            "point": {
              "size": 30,
              "fillOpacity": 0
            }
          },
          "params": [
            {
              "name": "selected_view",
              "select": {
                "type": "point",
                "fields": [
                  "View"
                ]
              },
              "bind": {
                "input": "select",
                "labels": [
                  "Percentile",
                  "Race",
                  "Region"
                ],
                "options": [
                  "by Percentile",
                  "by Race",
                  "by Region"
                ],
                "name": "View"
              },
              "value": "by Percentile"
            }
          ]
        }
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "title": null,
            "grid": false,
            "labelFontSize": 11,
            "tickOpacity": 0
          }
        },
        "y": {
          "field": "conditionalIncome",
          "type": "quantitative",
          "scale": {
            "zero": false,
            "type": "linear"
          },
          "axis": {
            "title": "",
            "format": "$,d",
            "ticks": false,
            "labelPadding": 5,
            "labelFontSize": 11,
            "gridOpacity": 0.6,
            "grid": true
          }
        },
        "color": {
          "field": "Series",
          "legend": {
            "orient": "none",
            "title": null,
            "direction": "horizontal",
            "legendX": -35,
            "legendY": -25
          },
          "scale": {
            "range": [
              "#539165",
              "#A84448",
              "#F7C04A",
              "#3F497F",
              "#E9A178",
              "#B4E4FF"
            ]
          }
        },
        "strokeDash": {
          "condition": {
            "test": "datum.stroke == 1",
            "value": [
              5,
              5
            ]
          },
          "value": []
        }
      }
    }
  ]
}