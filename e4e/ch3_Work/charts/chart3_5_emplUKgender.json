{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch3_Work/data/ONS_UK_unemployment.csv"
  },
  "config": {"view": {"stroke": "transparent"}},
  "width": 500,
  "height": 300,
  "title": {
    "text": "Employment by gender, UK",
    "subtitle": [
      "Aged 16-64 yrs, seasonally adjusted",
      "Data: ONS",
      ""
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black",
    "fontSize": 16
  },
  "transform": [{"calculate": "datum.Employment / 100", "as": "Employment"}],
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false, 
        "labelAngle":0,
        "gridOpacity": 0.6,
        "ticks": false,
        "labelPadding": 5,
        "labelFontSize": 11}
    }
  },
  "layer": [
    {
      "encoding": {
        "color": {
          "field": "Metric",
          "type": "nominal",
          "legend": {

            "orient": "none",
        "direction": "horizontal",
        "legendX": -35,
        "legendY": -30,
        "title": null

          },
          "scale": {"range": ["grey", "#008080", "rgb(128,0,0)"]},
          "sort": ["Total", "Female", "Male"]
        },
        "y": {
          "field": "Employment",
          "type": "quantitative",
          "title": null,
          "axis": {
          "gridOpacity": 0.6, 
          "format": "%", 
          "labelAngle":0,
          "ticks": false,
          "labelPadding": 5,
          "labelFontSize": 11
          }
        },
        "strokeDash": {
          "field": "Metric",
          "scale": {"range": [[1, 0], [1, 0], [4, 2]]},
          "legend": null
        }
      },
      "layer": [
        {"mark": "line"},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": "point"
        }
      ]
    },
    {
      "transform": [
        {"pivot": "Metric", "value": "Employment", "groupby": ["Date"]}
      ],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "format": "%b %Y"},
          {"field": "Total", "type": "quantitative", "format": "~%"},
          {"field": "Female", "type": "quantitative", "format": "~%"},
          {"field": "Male", "type": "quantitative", "format": "~%"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Date"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
  ]
}
