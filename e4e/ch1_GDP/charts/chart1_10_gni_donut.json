{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "An ordered donut chart, with a filter from raw data",
  "height": 300,
  "width": 300,
  "view": {"stroke": "transparent"},
  "title": {
    "text": "US GDP - income",
    "subtitle": ["2022 Q3, GNI Decomposition. ", " Data: BEA", ""],
    "subtitleFontStyle": "italic",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/classes/main/E4E_macro/US_BEA_GDP_GNIbyType.csv"
  },
  "mark": {
    "type": "arc",
    "innerRadius": 60,
    "outerRadius": 120,
    "cornerRadius": 0,
    "padAngle": 0.02
  },
  "encoding": {
    "theta": {"field": "Value", "type": "quantitative"},
    "color": {
      "field": "shortName",
      "type": "nominal",
      "legend": {
        "title": null,
        "direction": "horizontal",
        "columns": 3,
        "orient": "none",
        "legendX": 0,
        "legendY": -5
      },
      "sort": {"field": "pieNumber", "order": "ascending"},
      "scale": {
        "range": ["#800000", "#4D5359", "#508484", "#D9CF96", "#BFB6BB"]
      }
    },
    "order": {
      "field": "pieNumber",
      "type": "quantitative",
      "sort": "ascending"
    },
    "tooltip": [
      {"field": "Item", "title": "Item", "format": ""},
      {"field": "Value", "title": "USD billions", "format": "$,"}
    ]
  },
  "transform": [{"filter": {"field": "Line", "oneOf": [3, 6, 7, 9, 21]}}]
}