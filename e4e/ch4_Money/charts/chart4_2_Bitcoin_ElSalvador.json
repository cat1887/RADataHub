{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch4_Money/data/chart4_3_Bitcoin_detail.csv",
      "format": {"type": "csv"}
    },
    "view": {"stroke": "transparent"},
    "title": {
      "text": "Bitcoin: long run",
      "subtitle": ["Daily BTC price, current US Dollars", "Source: Investing.com", ""],
      "fontSize": 16,
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 12,
      "anchor": "start",
      "color": "black"
    },
    "height": 300,
    "width": 500,
    "transform": [
      {"calculate": "year(datum.Date)", "as": "year"},
      {"filter": "datum.Date > 1630886400000"},
      {"filter": "datum.year >= 2021"},
      {
        "lookup": "Date",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch4_Money/data/chart4_2_Bitcoin_ElSalvador.csv"
          },
          "key": "Date",
          "fields": ["MA Cost", "Bitcoin Total"]
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "axis": {
          "labelAngle": 0,
          "grid": false,
          "ticks": false,
          "labelPadding": 5,
          "labelFontSize": 11
        }
      }
    },
  
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch4_Money/data/chart4_2_Bitcoin_ElSalvador.csv",
          "format": {"type": "csv"}
    },
        "mark": {
          "type": "line",
          "interpolate": "step-after"
        },
        "encoding": {
          "y": {
            "field": "MA Cost",
            "type": "quantitative"
          }
        }
      },
      {
        "encoding": {
          "y": {
            "field": "Low",
            "type": "quantitative",
            "title": "",
            "axis": {
              "grid": true,
              "gridOpacity": 0.6,
              "format": "$,.0f",
              "ticks": false,
              "labelPadding": 5,
              "labelFontSize": 11
            }
          }
        },
        "layer": [
          {"mark": {"type": "line", "size": 1.4, "color": "rgb(128,0,0)"}},
          {
            "transform": [
              {"filter": {"param": "hover", "empty": false}}
            ],
            "mark": "point"
          }
        ]
      },
      {
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {"field": "Date", "type": "temporal"},
            {
              "field": "Price",
              "type": "quantitative",
              "format": "$,d",
              "title": "Price"
            },
            {
              "field": "High",
              "type": "quantitative",
              "format": "$,d"
            },
            {
              "field": "Low",
              "type": "quantitative",
              "format": "$,d"
            }
          ]
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["Date"],
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ]
      }
    ]
  }