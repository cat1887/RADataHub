{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch6_spending_tax/data/chart6_1_CBO.csv"
  },
  "transform": [
    {"calculate": "datum.Category == 'Other Discretionary,' ? 'Other Discretionary' : datum.Category", "as": "Category"},
    {"calculate": "{'Health Care Programs': 0, 'Social Security': 1, 'Other Discretionary': 2, 'Defense': 3, 'Other Non-Discretionary': 4, 'Net Interest': 5}[datum.Category]", "as": "order"}
  ],
  "title": {
    "text": "How the Government Spends",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "subtitleFontStyle": "italic",
    "anchor": "start",
    "subtitle": [
      "Federal Outlays: past, present and future", "as a percentage of GDP",
      "Source: CBO",
      ""
    ]
  },
  "config": {
    "style": {"cell": {"stroke": "transparent"}},
    "locale": {
      "number": {
        "decimal": ".",
        "thousands": ",",
        "grouping": [3],
        "currency": ["$", "B"]
      }
    }
  },
  "layer": [
    {
      "transform": [
        {"pivot": "Category", "value": "Value", "groupby": ["Period"]},
        {
          "calculate": "datum['European LCFIs'] + datum['UK LCFIs'] + datum['US Commercial Banks'] + datum['US Securities Houses']",
          "as": "Total"
        }
      ],
      "mark": {"type": "bar", "fill": "black", "opacity": 0.001},
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Period"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "encoding": {
        "x": null,
        "opacity": {
          "condition": [{"test": "datum.Period == hover.Period", "value": 0.05}]
        },
        "tooltip": [
          {"field": "Period", "type": "nominal"},
          {
            "field": "Health Care Programs",
            "type": "quantitative",
            "format": ".1%"
          },
          {
            "field": "Social Security",
            "type": "quantitative",
            "format": ".1%"
          },
          {
            "field": "Other Discretionary",
            "type": "quantitative",
            "format": ".1%"
          },
          {
            "field": "Defense",
            "type": "quantitative",
            "format": ".1%"
          },
          {
            "field": "Other Non-Discretionary",
            "type": "quantitative",
            "format": ".1%"
          },
          {
            "field": "Net Interest",
            "type": "quantitative",
            "format": ".1%"
          }
        ]
      }
    },
    {"mark": "bar"}
  ],
  "width": 500,
  "height": 250,
  "encoding": {
    "y": {
      "field": "Period",      
      "type": "nominal",
      "axis": {"title": null, 
      "domain": false,
      "grid": false,
      "tickOpacity": 0, "labelAngle": 0}
    },
    "x": {
      "field": "Value",
      "type": "quantitative",
      "axis": {
        "format": "%",
        "grid": false,
        "gridOpacity": 0.6,
        "tickOpacity": 0,
        "title": null
      }
    },
    "order":{
      "field": "order"
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "legend": {
        "values": ["Health Care Programs", "Social Security", "Other Discretionary", "Defense", "Other Non-Discretionary", "Net Interest"],
        "title": null,
        "columns": 4,
        "direction": "horizontal",
        "orient": "none",
        "legendY": -26
      }
    }
  }
}