{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/JamesFKean/RA_work/main/chart3v2.csv"
    },
    "height": 300,
    "width": 500,
    "title": {
      "text": "US Government Revenues vs Outlays",
      "anchor": "start",
      "subtitle": "Source: CBO"
    },
    "params": [
      {
        "name": "minYear",
        "value": 1962,
        "bind": {
          "input": "range",
          "min": 1962,
          "max": 2020,
          "step": 1,
          "name": "Start year:"
        }
      },
      {
        "name": "maxYear",
        "value": 2021,
        "bind": {
          "input": "range",
          "min": 1801,
          "max": 2021,
          "step": 1,
          "name": "End year:"
        }
      }
    ],
    "transform": [
      {"calculate": "year(datum.Year)", "as": "year"},
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"}
    ],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "axis": {"grid": false, "ticks": false, "labelPadding": 5, "labelFontSize": 11},
        "title": ""
      }
    },
    "layer": [
      { "transform": [
        {"calculate": "datum.Value/1000", "as": "Value"}
      ],
        "encoding": {
          "color": {
            "field": "Type",
            "type": "nominal",
            "legend": {"title": "", "orient": "top", "labelAlign": "left"},
            "scale": {"range": ["#ff0303", "#880000"]}
          },
          "y": {
            "field": "Value",
            "type": "quantitative",
            "axis": {"gridOpacity": 0.6, "ticks": false, "labelPadding": 5, "title": null, "labelFontSize": 11, "format": "$.0f"},
            "title": "Billions of USD"
          }
        },
        "layer": [
          {"mark": {"type": "line", "interpolate": "linear"}},
          {
            "transform": [{"filter": {"param": "hover", "empty": false}}],
            "mark": "point"
          },
          {
            "mark": {"type": "area"},
            "encoding": {
              "y2": {"field": "Outlays"},
              "y": {"field": "Revenues"},
              "color": {
                "condition": {"test": "datum.Outlays > datum.Revenues"},
                "value": "#000"
              }
            }
          }
        ]
      },
      {
        "transform": [{"pivot": "Type", "value": "Value", "groupby": ["Year"]}, {"calculate": "datum.Outlays/1000", "as": "Outlays"}, {"calculate": "datum.Revenues/1000", "as": "Revenues"}],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.5, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {
              "field": "Revenues",
              "type": "quantitative",
              "title": "Revenues Billions of USD", "format": "$.2f"
            },
            {
              "field": "Outlays",
              "type": "quantitative",
              "title": "Outlays Billions of USD", "format": "$.2f"
            }
          ]
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["Year"],
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ]
      },
      
    ],
    "config": {"style": {"cell": {"stroke": "transparent"}}, "locale": {
        "number": {
          "decimal": ".",
          "thousands": ",",
          "grouping": [3],
          "currency": ["$", " T"]}}
  }
  }