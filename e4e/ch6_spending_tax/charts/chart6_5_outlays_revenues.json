{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch6_spending_tax/data/ch6_outlays_revenue.csv"
  },
  "height": 300,
  "width": 500,
  "title": {
    "text": "US Government Revenues and Outlays",
    "anchor": "start",
    "subtitle": ["Deficit/Surplus Shaded", "Source: CBO", ""]
  },
  "params": [
    {
      "name": "minYear",
      "value": 1962,
      "bind": {
        "input": "range",
        "min": 1962,
        "max": 2020,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1801,
        "max": 2021,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "transform": [
    {"calculate": "year(datum.Year)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {"grid": false, "ticks": false, "labelPadding": 5, "labelFontSize": 11},
      "title": ""
    }
  },
  "layer": [
    { "transform": [
      {"calculate": "datum.Value/1000", "as": "Value"}
    ],
      "encoding": {
        "color": {
          "field": "Type",
          "type": "nominal",
          "legend": {"title": "", "orient": "none", "direction":"horizontal", "legendX":0, "legendY":-17, "labelAlign": "left"},
          "scale": {"range": ["rgb(128,0,0)", "rgb(0,0,128)"]}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"gridOpacity": 0.6, "ticks": false, "labelPadding": 5, "title": null, "labelFontSize": 11, "format": "$.0f"},
          "title": "Billions of USD"
        }
      },
      "layer": [
        {"mark": {"type": "line", "interpolate": "linear"}},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": "circle"
        },
        {
          "mark": {"type": "area"},
          "transform": [
            {"pivot": "Type", "value": "Value", "groupby": ["Year"]},
            {"filter": "datum.Revenues > datum.Outlays & year(datum.Year)>1990"}
            
            ],
          "encoding": {
            "y2": {"field": "Outlays"},
            "y": {"field": "Revenues"},
            "color": {
              "value": "rgba(30,180,30,0.5)"
            }
          }
        },
        {
          "mark": {"type": "area"},
          "transform": [
            {"pivot": "Type", "value": "Value", "groupby": ["Year"]},
            {"filter": "datum.Revenues < datum.Outlays"}
            
            ],
          "encoding": {
            "y2": {"field": "Outlays"},
            "y": {"field": "Revenues"},
            "color": {
              "value": "rgba(180,30,30,0.3)"
            }
          }
        }
      ]
    },
    {
      "transform": [{"pivot": "Type", "value": "Value", "groupby": ["Year"]}, {"calculate": "datum.Outlays/1000", "as": "Outlays"}, {"calculate": "datum.Revenues/1000", "as": "Revenues"}],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.5, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {
            "field": "Revenues",
            "type": "quantitative",
            "title": "Revenues Billions of USD", "format": "$.2f"
          },
          {
            "field": "Outlays",
            "type": "quantitative",
            "title": "Outlays Billions of USD", "format": "$.2f"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
    
  ],
  "config": {"style": {"cell": {"stroke": "transparent"}}, "locale": {
      "number": {
        "decimal": ".",
        "thousands": ",",
        "grouping": [3],
        "currency": ["$", " T"]}}
}
}